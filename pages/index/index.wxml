<!-- index.wxml -->
<view class="container">
    <view class="line">
        <view class="block black" id="endless" bind:tap="goGame">
            <text>无尽模式</text>
        </view>
        <view class="block" id="time" bind:tap="goGame">
            <text>计时模式</text>
        </view>
    </view>
    <view class="line">
        <view class="block" id="speed" bind:tap="goGame">
            <text>急速模式</text>
        </view>
        <view class="block black">
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" />
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </view>
    </view>
    <view class="line">
        <view class="block black">
            <text class="">最高分数：{{heighestScore}}</text>
        </view>
        <view class="block">
            <text class="">最长时间：{{longestTime}}</text>
        </view>
    </view>
</view>